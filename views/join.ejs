<%- include('partials/header-join') %>
    <div class="container join-container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center">Durak Web Engine</div>
    
                    <div class="card-body join-card-body">
                        <form action="/join" method="post">
                            <div class="form-group row">
                              <label for="nickname" class="col-md-4 col-form-label text-md-right">Nickname</label>
    
                              <div class="col-md-6">
                                <input type="text" class="form-control" id="nickname" name="nickname" required autofocus>
                              </div>
                            </div>
    
                            <div class="col-md-6 offset-md-5 button-div">
                                <button type="submit" class="btn btn-dark join-button">
                                    Join lobby
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
